{
  "manifest_version": 3,
  "name": "AI Video Q&A",
  "version": "1.0",
  "description": "Answer questions based on YouTube video transcripts using AI.",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "AI Video Q&A"
  }
}